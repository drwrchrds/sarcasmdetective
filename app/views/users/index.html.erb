<div id="homepage">
  <div id="headline">
    <h1>SRSLY?</h1>
    <h2>Twitter Sarcasm Detective</h2>
  </div>
  <% if flash[:errors] %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>Warning!</strong> That Twitter user was not found
    </div>
  <% end %>
  <div id="new-handle">
    <h2>Find out how sarcastic a Twitter user is:</h2>
    <form action="<%= users_url %>" method="post" class="form">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
          <input 
            type="text" 
            name="user[twitter_handle]" 
            class="form-control" 
            placeholder="Enter Twitter Handle">
        </div>
      
      <button class="btn btn-default">Let's see it!</button>
    </form>
  </div>
  <div id="users">
    <h2>We already checked the sarcasm of:</h2>

    <ul>
      <% @users.each do |user| %>
      <li>
        <h4><%= link_to '@' + user.twitter_handle, user_url(user) %></h4>
      </li>
      <% end %>
    </ul>
  </div>
</div>